doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Create new note
    body 
        h1 New note 
        form(method='POST' action="/notes")
            div 
                label Title
                input(type="text" name='title')
            div 
                label Content
                input(type="text" name='content')
            button(type='submit') Create note